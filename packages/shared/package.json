{
  "name": "@specify-poker/shared",
  "private": true,
  "type": "module",
  "main": "dist/cjs/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./pg": {
      "types": "./dist/pg/index.d.ts",
      "import": "./dist/pg/index.js",
      "require": "./dist/cjs/pg/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js",
      "require": "./dist/cjs/schemas/index.js"
    },
    "./pipeline": {
      "types": "./dist/pipeline/index.d.ts",
      "import": "./dist/pipeline/index.js",
      "require": "./dist/cjs/pipeline/index.js"
    },
    "./observer": {
      "types": "./dist/observer/index.d.ts",
      "import": "./dist/observer/index.js",
      "require": "./dist/cjs/observer/index.js"
    },
    "./redis": {
      "types": "./dist/redis/index.d.ts",
      "import": "./dist/redis/index.js",
      "require": "./dist/cjs/redis/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "pg": ["dist/pg/index.d.ts"],
      "observer": ["dist/observer/index.d.ts"],
      "pipeline": ["dist/pipeline/index.d.ts"],
      "redis": ["dist/redis/index.d.ts"]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json && node -e \"const fs=require('node:fs'); fs.mkdirSync('dist/cjs',{recursive:true}); fs.writeFileSync('dist/cjs/package.json', JSON.stringify({type:'commonjs'}, null, 2));\""
  },
  "dependencies": {
    "@opentelemetry/api": "^1.8.0",
    "pino": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0"
  },
  "peerDependencies": {
    "pg": "^8.11.0",
    "redis": "^4.6.13"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "redis": {
      "optional": true
    }
  }
}
